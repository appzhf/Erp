<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_background"
    android:orientation="vertical"
    tools:context="com.example.zhf.erp.activity.UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/user_margin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_title"
            android:background="@drawable/user_style">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/logo" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="个人中心" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="userName" />
            </LinearLayout>

            <ImageView style="@style/user_fragment_img_style"
                android:id="@+id/imageView2" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_margin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_H"
            android:background="@drawable/user_style">

            <TextView
                android:text="最新功能"
                style="@style/user_fragment_text_style" />

            <ImageView style="@style/user_fragment_img_style" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_margin" />

        <RelativeLayout
            android:id="@+id/user_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_H"
            android:background="@drawable/user_style">

            <TextView
                android:text="客服热线"
                style="@style/user_fragment_text_style" />

            <ImageView style="@style/user_fragment_img_style" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_margin" />

        <RelativeLayout
            android:id="@+id/application"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_H"
            android:background="@drawable/user_style">

            <TextView
                android:text="应用市场"
                style="@style/user_fragment_text_style" />

            <ImageView style="@style/user_fragment_img_style" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_margin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_H"
            android:background="@drawable/user_style">

            <TextView
                android:text="权限设置"
                style="@style/user_fragment_text_style" />

            <ImageView style="@style/user_fragment_img_style" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_margin" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_H"
            android:background="@drawable/user_style">

            <TextView
                android:text="版本检测"
                style="@style/user_fragment_text_style" />

            <ImageView style="@style/user_fragment_img_style" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_margin" />

        <RelativeLayout
            android:id="@+id/user_intro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_H"
            android:background="@drawable/user_style">

            <TextView
                android:text="关于"
                style="@style/user_fragment_text_style" />

            <ImageView style="@style/user_fragment_img_style" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_margin" />
        <RelativeLayout
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_H"
            android:background="@drawable/user_style">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_exit"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/user_exit"
                android:textColor="@color/orange"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
</ScrollView>

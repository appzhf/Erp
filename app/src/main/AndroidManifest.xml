<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zhf.erp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--
          screenOrientation="portrait"限制横竖屏切换
          windowSoftInputMode="stateHidden|adjustNothing"避免输入法面板遮挡问题
        -->
        <activity
            android:name=".activity.UserActivity"
            screenOrientation="portrait" />
        <activity
            android:name=".activity.AllActivity"
            screenOrientation="portrait" />
        <!-- 公司简介 -->
        <activity
            android:name=".activity.IntroductionActivity"
            screenOrientation="portrait" />
        <!-- 个人中心 -->
        <activity
            android:name=".activity.UserCenterActivity"
            screenOrientation="portrait" />
        <!-- help -->
        <activity
            android:name=".activity.HelpActivity"
            screenOrientation="portrait" />
        <!--个人数据应用-->
        <activity
            android:name=".activity.PersonActivity"
            screenOrientation="portrait"/>
        <activity
            android:name=".MainActivity"
            screenOrientation="portrait" />
        <!-- 登录 -->
        <activity
            android:name=".activity.LoginActivity"
            screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>